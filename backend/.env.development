# AVA Coach Santé IA - Configuration Développement
NODE_ENV=development
PORT=5003

# Base de données - Développement
MONGODB_URI=mongodb://localhost:27017/coach_sante_dev

# CORS - Développement (multiple origins autorisées)
CORS_ORIGIN=http://localhost:5173

# JWT - Clé de développement (générer une nouvelle pour la production!)
JWT_SECRET=dev_jwt_secret_change_in_production_make_it_very_long_and_secure_32chars_minimum

# URLs Frontend
FRONTEND_URL=http://localhost:5173

# Spoonacular API (optionnel en dev)
SPOONACULAR_API_KEY=your_spoonacular_api_key

# Stripe - Clés de test
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Garmin OAuth (optionnel en dev)
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
GARMIN_CONSUMER_KEY=your_garmin_consumer_key
GARMIN_CONSUMER_SECRET=your_garmin_consumer_secret
GARMIN_REDIRECT_URI=http://localhost:5003/auth/garmin/callback

# AI APIs (optionnel)
OPENAI_API_KEY=sk-your_openai_api_key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Email - Gmail pour développement
EMAIL_PROVIDER=gmail
FROM_EMAIL=dev@ava-coach-sante.com
GMAIL_USER=your-dev-gmail@gmail.com
GMAIL_APP_PASSWORD=your_16_char_app_password

# Firebase (optionnel en dev)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Sentry - Désactivé en dev par défaut
# SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_RELEASE=ava-coach-sante@dev
SENTRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=debug
LOG_FORMAT=simple

# Rate limiting - Plus permissif en dev
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION=30

# Backup - Simplifié en dev
BACKUP_ENABLED=true
BACKUP_DAILY_TIME=02:00
BACKUP_DAILY_RETENTION=3
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
BACKUP_REMOTE_ENABLED=false

# Taille des fichiers
MAX_FILE_SIZE=50mb