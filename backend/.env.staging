# AVA Coach Santé IA - Configuration Staging
NODE_ENV=staging
PORT=5003

# Base de données - Staging
MONGODB_URI=mongodb://localhost:27017/coach_sante_staging

# CORS - Staging
CORS_ORIGIN=https://staging.ava-coach-sante.com
STAGING_FRONTEND_URL=https://staging.ava-coach-sante.com

# JWT - Clé sécurisée pour staging
JWT_SECRET=staging_jwt_secret_change_this_to_secure_random_32_chars_minimum_for_staging
JWT_EXPIRES_IN=24h

# URLs Frontend
FRONTEND_URL=https://staging.ava-coach-sante.com

# Spoonacular API
SPOONACULAR_API_KEY=your_staging_spoonacular_api_key

# Stripe - Clés de test pour staging
STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_staging_webhook_secret

# Garmin OAuth - Staging
GARMIN_CLIENT_ID=your_staging_garmin_client_id
GARMIN_CLIENT_SECRET=your_staging_garmin_client_secret
GARMIN_CONSUMER_KEY=your_staging_garmin_consumer_key
GARMIN_CONSUMER_SECRET=your_staging_garmin_consumer_secret
GARMIN_REDIRECT_URI=https://staging.ava-coach-sante.com/auth/garmin/callback

# AI APIs
OPENAI_API_KEY=sk-your_staging_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_API_KEY=sk-ant-your_staging_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Email - SendGrid recommandé pour staging
EMAIL_PROVIDER=sendgrid
FROM_EMAIL=staging@ava-coach-sante.com
SENDGRID_API_KEY=SG.your_staging_sendgrid_api_key

# Firebase - Projet staging
FIREBASE_PROJECT_ID=your_staging_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_staging_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_staging_firebase_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-staging-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_staging_firebase_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-staging-project.iam.gserviceaccount.com

# Sentry - Activé en staging avec échantillonnage réduit
SENTRY_DSN=https://your-staging-dsn@sentry.io/staging-project-id
SENTRY_RELEASE=ava-coach-sante@staging
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.5
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# Rate limiting - Modéré pour staging
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION=60

# Backup - Configuration complète pour staging
BACKUP_ENABLED=true
BACKUP_DAILY_TIME=02:00
BACKUP_DAILY_RETENTION=7
BACKUP_WEEKLY_TIME=03:00
BACKUP_WEEKLY_RETENTION=4
BACKUP_MONTHLY_TIME=04:00
BACKUP_MONTHLY_RETENTION=3
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your_staging_backup_encryption_key_32_chars_minimum
BACKUP_REMOTE_ENABLED=true
BACKUP_REMOTE_TYPE=s3
BACKUP_S3_BUCKET=ava-coach-sante-backups-staging
BACKUP_S3_REGION=eu-west-1

# AWS (pour backup S3)
AWS_ACCESS_KEY_ID=your_staging_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_staging_aws_secret_access_key
AWS_REGION=eu-west-1

# Taille des fichiers
MAX_FILE_SIZE=50mb