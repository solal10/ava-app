# AVA Coach Santé IA - Configuration Production
NODE_ENV=production
PORT=5003

# Base de données - Production (OBLIGATOIRE)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/coach_sante_prod?retryWrites=true&w=majority

# CORS - Production (DOMAINE EXACT UNIQUEMENT)
CORS_ORIGIN=https://ava-coach-sante.com
PRODUCTION_FRONTEND_URL=https://ava-coach-sante.com

# JWT - CLÉ SÉCURISÉE OBLIGATOIRE (64+ caractères recommandés)
JWT_SECRET=production_jwt_secret_CHANGE_THIS_TO_VERY_SECURE_RANDOM_64_CHARS_MINIMUM_FOR_PRODUCTION
JWT_EXPIRES_IN=24h

# URLs Frontend
FRONTEND_URL=https://ava-coach-sante.com

# Spoonacular API - Production
SPOONACULAR_API_KEY=your_production_spoonacular_api_key

# Stripe - CLÉS DE PRODUCTION (pk_live_ et sk_live_)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_LIVE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Garmin OAuth - Production
GARMIN_CLIENT_ID=your_production_garmin_client_id
GARMIN_CLIENT_SECRET=your_production_garmin_client_secret
GARMIN_CONSUMER_KEY=your_production_garmin_consumer_key
GARMIN_CONSUMER_SECRET=your_production_garmin_consumer_secret
GARMIN_REDIRECT_URI=https://ava-coach-sante.com/auth/garmin/callback

# AI APIs - Production
OPENAI_API_KEY=sk-your_production_openai_api_key
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=sk-ant-your_production_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Email - SendGrid OBLIGATOIRE en production
EMAIL_PROVIDER=sendgrid
FROM_EMAIL=noreply@ava-coach-sante.com
SENDGRID_API_KEY=SG.your_production_sendgrid_api_key

# Firebase - Projet production
FIREBASE_PROJECT_ID=your_production_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_production_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_production_firebase_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-production-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_production_firebase_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-production-project.iam.gserviceaccount.com

# Sentry - OBLIGATOIRE en production
SENTRY_DSN=https://your-production-dsn@sentry.io/production-project-id
SENTRY_RELEASE=ava-coach-sante@1.0.0
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging - Production (erreurs uniquement)
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_MAX_FILES=30
LOG_MAX_SIZE=50m

# Rate limiting - Strict en production
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION=90

# Backup - Configuration complète OBLIGATOIRE
BACKUP_ENABLED=true
BACKUP_DAILY_TIME=02:00
BACKUP_DAILY_RETENTION=7
BACKUP_WEEKLY_TIME=03:00
BACKUP_WEEKLY_RETENTION=4
BACKUP_MONTHLY_TIME=04:00
BACKUP_MONTHLY_RETENTION=12
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your_production_backup_encryption_key_64_chars_minimum_CHANGE_THIS
BACKUP_REMOTE_ENABLED=true
BACKUP_REMOTE_TYPE=s3
BACKUP_S3_BUCKET=ava-coach-sante-backups-prod
BACKUP_S3_REGION=eu-west-1

# AWS - Production (pour backup S3 et SES si utilisé)
AWS_ACCESS_KEY_ID=your_production_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_access_key
AWS_REGION=eu-west-1

# Taille des fichiers
MAX_FILE_SIZE=50mb

# IMPORTANT: Variables critiques pour la sécurité
# - Changer TOUS les secrets et clés
# - Utiliser des mots de passe forts (64+ caractères)
# - Activer le chiffrement backup
# - Configurer Sentry pour le monitoring
# - Utiliser uniquement HTTPS en production