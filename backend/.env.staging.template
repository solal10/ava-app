# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in the actual values

# Server Configuration
NODE_ENV=staging
PORT=5003
MAX_FILE_SIZE=50mb

# CORS Configuration  
CORS_ORIGIN=https://staging.yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://admin:YOUR_STAGING_PASSWORD@mongodb:27017/ava_coach_sante_staging?authSource=admin

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security Configuration
JWT_SECRET=YOUR_STAGING_JWT_SECRET_DIFFERENT_FROM_PRODUCTION

# API Keys - External Services (use test/staging keys where available)
SPOONACULAR_API_KEY=your_spoonacular_staging_api_key_here
OPENAI_API_KEY=your_openai_staging_api_key_here
ANTHROPIC_API_KEY=your_anthropic_staging_api_key_here

# Payment Processing - Stripe (TEST KEYS ONLY)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key  
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret

# Garmin Integration (staging/development keys)
GARMIN_CLIENT_ID=your_garmin_staging_client_id
GARMIN_CLIENT_SECRET=your_garmin_staging_client_secret
GARMIN_CONSUMER_KEY=your_garmin_staging_consumer_key
GARMIN_CONSUMER_SECRET=your_garmin_staging_consumer_secret

# Email Service Configuration
EMAIL_PROVIDER=sendgrid
FROM_EMAIL=staging@yourdomain.com

# SendGrid Configuration (staging account)
SENDGRID_API_KEY=SG.your_sendgrid_staging_api_key

# AWS SES Configuration (staging environment)
AWS_ACCESS_KEY_ID=your_aws_staging_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_staging_secret_access_key
AWS_REGION=us-east-1

# Gmail Configuration (staging account)
GMAIL_USER=staging_notifications@gmail.com
GMAIL_APP_PASSWORD=your_gmail_staging_app_password

# Firebase Configuration (staging project)
FIREBASE_PROJECT_ID=your_firebase_staging_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_staging_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_STAGING_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=staging-service@your_staging_project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_staging_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/staging-service%40your_staging_project.iam.gserviceaccount.com

# Application URLs
FRONTEND_URL=https://staging.yourdomain.com
BACKEND_URL=https://staging-api.yourdomain.com

# Logging Configuration (more verbose for staging)
LOG_LEVEL=debug

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT_ENABLED=true

# Rate Limiting Configuration (more lenient for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX=10

# Session Configuration
SESSION_SECRET=your_staging_session_secret_key_here

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=10485760

# Cache Configuration  
CACHE_TTL=1800
REDIS_TTL=3600

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# SSL Configuration
SSL_ENABLED=false

# Environment Specific Features (can be more experimental in staging)
FEATURE_AI_CHAT=true
FEATURE_GARMIN_SYNC=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_EXPERIMENTAL_FEATURES=true

# Third Party Integrations Status
INTEGRATION_SPOONACULAR=true
INTEGRATION_OPENAI=true
INTEGRATION_ANTHROPIC=true
INTEGRATION_STRIPE=true
INTEGRATION_GARMIN=true

# Backup Configuration (shorter retention for staging)
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=7

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Staging environment under maintenance"

# Debug and Testing Features
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false
ENABLE_TEST_ENDPOINTS=true
LOG_API_REQUESTS=true